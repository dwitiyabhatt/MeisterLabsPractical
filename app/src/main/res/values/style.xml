<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
    </style>

    <style name="CommonCardView" parent="CardView">
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CommonButton">
        <item name="android:minWidth">@dimen/_170sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialogue</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


</resources>